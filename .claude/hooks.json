{
  "hooks": {
    "beforeToolUse": {
      "command": "./scripts/workflows/pre-action-check.sh",
      "description": "작업 전 코드 품질 및 환경 검사"
    },
    "afterToolUse": {
      "command": "./scripts/workflows/post-action-log.sh",
      "description": "작업 후 자동 로깅 및 상태 업데이트"
    },
    "onStart": {
      "command": "./scripts/dev-check.sh",
      "description": "Claude 시작 시 개발 환경 상태 확인"
    },
    "onExit": {
      "command": "./scripts/workflows/session-summary.sh",
      "description": "Claude 종료 시 세션 요약 생성"
    },
    "beforeCommit": {
      "command": "./scripts/workflows/pre-commit-check.sh",
      "description": "Git 커밋 전 최종 검증"
    }
  }
}